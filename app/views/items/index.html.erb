<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Nomitem</th>
      <th>Desitem</th>
      <th>User</th>
      <th>Place</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.nomItem %></td>
        <td><%= item.desItem %></td>
        <td><%= item.user.NomUs %></td>
        <td><%= item.place.NomPlace %></td>
        <td><%= item.category.nomCategory %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

