



<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Libros</h1>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel panel-default">
  <!-- Default panel contents -->
      <div class="panel-heading">
      <div class="row">
        <div class="col-md-1">
          <%if can? :create, Libro %>
         <%= link_to "", new_libro_path, class: "btn btn-success glyphicon glyphicon-plus" %>
        <%end%>
        </div>
      </div>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Autor</th>
            <th>Edicion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @libros.each do |libro| %>
            <tr>
            <td><%= libro.TitLib %></td>
            <td><%= libro.AutLib %></td>
            <td><%= libro.EdiLib %></td>
            <td><%= link_to '', libro, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
            <% if can? :update, Libro %>
              <td><%= link_to "", edit_libro_path(libro), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
            <%end%>
            <% if can? :delete, Libro %>
                    <td><%= link_to '', libro, class: "btn btn-warning glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Estas seguro?' } %>
                    </td>  
            <%end%>
          </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
</div>


