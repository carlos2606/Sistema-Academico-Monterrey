<% if current_user %>
<% if can? :show, Prestamo %>
<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="jumbotron">
        <div class="container">
          <h3>Descripcion de Prestamo # <%=@prestamo.id%></h3>
          <br>

          <p>
            <strong>Libro:</strong>
            <%= @prestamo.libro.TitLib %>
          </p>

          <p>
            <strong>Autor:</strong>
            <%= @prestamo.libro.AutLib %>
          </p>

          <p>
            <strong>Numero de Innscrpcion:</strong>
            <%= @prestamo.libro.numInsc %>
          </p>

          <p>
            <strong>Fecha de Solicitud:</strong>
            <%= @prestamo.fecSol %>
          </p>

          <p>
            <strong>Fecha de Devolucion:</strong>
            <%= @prestamo.fecDev %>
          </p>

          <p>
            <strong>Usuario:</strong>
            <%= @prestamo.user.NomUs %>
          </p>

          <p>
            <strong>Nombre del Solicitante:</strong>
            <%= @prestamo.nomSolic %>
          </p>

          <p>
            <strong>Prestamo estado:</strong>
            <%= @prestamo.prestamo_estado.nomEstPres %>
          </p>
          <div class >
            <p><%= link_to "Ir al listado de Prestamos", prestamos_path %></p> 
            <%= link_to "Imprimir Prestamo", prestamo_path(@prestamo, format: "pdf", class: "btn btn-primary") %>
          </div>
        </div>
      </div>
    </div>
</div>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

