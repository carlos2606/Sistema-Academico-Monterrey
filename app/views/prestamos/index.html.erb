<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Prestamos</h1>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel panel-default">
  <!-- Default panel contents -->
      <div class="panel-heading">
      <div class="row">
        <div class="col-md-1">
    <%if can? :create, Prestamo %>
      <%= link_to "", new_prestamo_path , class: "btn btn-success glyphicon glyphicon-plus" %>
    <%end%>
      </div>
      </div>
      </div>
      <table class="table">
  <thead>
    <tr>
      <th>Fecsol</th>
      <th>Fecdev</th>
      <th>User</th>
      <th>Libro</th>
      <th>Prestamo estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestamos.each do |prestamo| %>
      <tr>
        <td><%= prestamo.fecSol %></td>
        <td><%= prestamo.fecDev %></td>
        <td><%= prestamo.user.NomUs %></td>
        <td><%= prestamo.libro.TitLib %></td>
        <td><%= prestamo.prestamo_estado.nomEstPres %></td>
        <% if can? :show, Prestamo %>
          <td><%= link_to 'Show', prestamo, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
        <%end%>
        <% if can? :update, Prestamo %>
          <td><%= link_to 'Edit', edit_prestamo_path(prestamo), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
        <%end%>
        <%if can? :delete, Prestamo%>
          <td><%= link_to 'Destroy', prestamo, class: "btn btn-warning glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>
    </div>
    </div>


<br>


