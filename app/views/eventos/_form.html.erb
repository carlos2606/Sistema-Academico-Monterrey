<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for @evento do |f| %>
      <div class="form-group">
        <strong>Nombre del Evento</strong><br>
        <%= f.text_field :NomEven, class: "form-control" %>
      </div>
      <div class="form-group">
        <strong>LUgar del Evento</strong><br>
        <%= f.text_field :LugEven, class: "form-control" %>
      </div>
      <div class="form-group">
        <strong>Fecha del Evento</strong><br>
        <%= f.datetime_select :FechEven, class: "form-control" %>
      </div>
      <div class="form-group">
        <strong>Descripcion</strong><br>
        <%= f.text_area :DescEven, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "Aceptar", class: "btn btn-primary" %>
      </div>
      <% end %>
      <br>
    </div>     
  </div>
</div>
