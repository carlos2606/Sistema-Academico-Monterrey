<p id="notice"><%= notice %></p>

<h1>Listing Queries</h1>

<table>
  <thead>
    <tr>
      <th>Nomcon</th>
      <th>Descon</th>
      <th>Feccon</th>
      <th>User</th>
      <th>Query state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.NomCon %></td>
        <td><%= query.DesCon %></td>
        <td><%= query.FecCon %></td>
        <td><%= query.user.NomUs %></td>
        <td><%= query.query_state.DeState %></td>
        <td><%= link_to 'Show', query %></td>
        <% if can? :update, Query %>
          <td><%= link_to 'Edit', edit_query_path(query) %></td>
        <% end %>
        <% if can? :delete, Query %>
          <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

