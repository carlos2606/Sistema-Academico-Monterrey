<% if current_user %>
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <p id="notice"><%= notice %></p>
      <div class="jumbotron">
        <div class="container">
          
           <div class="page-header">
            <h1><%= @query.NomCon %><small> <%= @query.user.NomUs %></small></h1>
          </div> 
            <p>
              <strong>Tema:</strong>
              <%= @query.NomCon %>
            </p>

            <p>
              <strong>Información Solicitada:</strong>
              <%= @query.info_solic %>
            </p>

            <p>
              <strong>Proposito:</strong>
              <%= @query.propCons %>
            </p>

            <p>
              <strong>Asignatura:</strong>
              <%= @query.signatura.nomSig %>
            </p>

            <p>
              <strong>Libros solcitados:</strong>
              <%= @query.NomCon %>
            </p>

            <p>
              <strong>Sección:</strong>
              <%= @query.seccion %>
            </p>

            <p>
              <strong>Para que día necesita la inforamación:</strong>
              <%= @query.FecCon %>
            </p>

            <p>
              <strong>Consulte la información solicitada</strong>
              <%= @query.DesCon %>
            </p>

            <p>
              <strong>Usuario:</strong>
              <%= @query.user.NomUs %>
            </p>

            <p>
              <strong>Estado Consulta:</strong>
              <%= @query.query_state.DeState %>
            </p>

            <%= link_to 'Back', queries_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <br>

  <%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>
