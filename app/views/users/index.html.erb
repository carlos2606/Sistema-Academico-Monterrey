<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Usuarios</h1>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel panel-default">
  <!-- Default panel contents -->
      <div class="panel-heading">
      <div class="row">
        <div class="col-md-1">
    <%if can? :create, User %>
      <%= link_to "", new_user_path , class: "btn btn-success glyphicon glyphicon-plus" %>
    <%end%>
      </div>
      </div>
      </div>
      <table class="table">
        <thead>
    <tr>
      <th>Nombre</th>
      <th>Primer Apellido</th>
      <th>Segundo Apellido</th>
      <th>Cedula</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.NomUs %></td>
        <td><%= user.ApUnoUs %></td>
        <td><%= user.ApDosUs %></td>
        <td><%= user.CedUs %></td>
        <td><%= user.role.nomRole %></td>
        <td><%= link_to '', user, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
        <% if can? :update, User %>
          <td><%= link_to "", edit_user_path(user), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
        <%end%>
        <% if can? :delete, User %>
          <td><%= link_to '', User, class: "btn btn-warning glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        <%end%>
      </tr>
      <%end%>
    </tbody>
    </table>
    </div>
    </div>
    </div>

